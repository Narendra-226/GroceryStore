Description: Redesigned UI for the Customer Login page.
*@
@{
    ViewData["Title"] = "Login";
    Layout = null; // Disable layout for this view
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <style>
        body {
            background: #f2f6fc;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            font-family: 'Arial', sans-serif;
        }

        .login-container {
            background: #ffffff;
            padding: 40px;
            border-radius: 15px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            max-width: 400px;
            width: 100%;
        }

            .login-container h2 {
                margin-bottom: 30px;
                color: #333;
                text-align: center;
            }

            .login-container .form-group {
                margin-bottom: 20px;
            }

            .login-container .form-control {
                height: 50px;
                border-radius: 10px;
                border: 1px solid #ced4da;
            }

            .login-container .btn {
                width: 100%;
                height: 50px;
                border-radius: 10px;
                background: #007bff;
                border: none;
                color: white;
                font-size: 18px;
                font-weight: bold;
            }

                .login-container .btn:hover {
                    background: #0056b3;
                }

            .login-container .form-group label {
                font-weight: bold;
                color: #555;
            }

            .login-container .form-group i {
                margin-right: 10px;
                color: #007bff;
            }

        .signup-container {
            text-align: center;
            margin-top: 20px;
        }

            .signup-container .btn-signup {
                background: #28a745;
                border: none;
                color: white;
                font-size: 16px;
                font-weight: bold;
                border-radius: 10px;
                padding: 10px 20px;
            }

                .signup-container .btn-signup:hover {
                    background: #218838;
                }
    </style>
    <title>@ViewData["Title"]</title>
</head>
<body>
    <div class="login-container">
        <h2 class="text-center">Customer Login</h2>
        <form asp-action="Login" method="post">
            <div class="form-group">
                <label for="email"><i class="fas fa-envelope"></i>Email</label>
                <input name="email" id="email" class="form-control" placeholder="Enter your email" required />
            </div>
            <div class="form-group">
                <label for="password"><i class="fas fa-lock"></i>Password</label>
                <input name="password" id="password" class="form-control" type="password" placeholder="Enter your password" required />
            </div>
            <button type="submit" class="btn btn-primary">Login</button>
        </form>
        <div class="signup-container">
            <a href="/Customer/Signup" class="btn-signup">Create new account</a>
        </div>
    </div>
</body>
</html>
