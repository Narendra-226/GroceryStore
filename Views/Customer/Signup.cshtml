@model NK.Models.CustomerViewModel

@{
    ViewData["Title"] = "Signup";
    Layout = null; // Disable layout for this view
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <style>
        body {
            background: #f2f6fc;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            font-family: 'Arial', sans-serif;
        }

        .signup-container {
            background: #ffffff;
            padding: 40px;
            border-radius: 15px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            max-width: 500px;
            width: 100%;
        }

            .signup-container h2 {
                margin-bottom: 30px;
                color: #333;
                text-align: center;
            }

            .signup-container .form-group {
                margin-bottom: 20px;
            }

            .signup-container .form-control {
                height: 50px;
                border-radius: 10px;
                border: 1px solid #ced4da;
            }

            .signup-container .btn {
                width: 100%;
                height: 50px;
                border-radius: 10px;
                background: #007bff;
                border: none;
                color: white;
                font-size: 18px;
                font-weight: bold;
            }

                .signup-container .btn:hover {
                    background: #0056b3;
                }

            .signup-container .form-group label {
                font-weight: bold;
                color: #555;
            }

            .signup-container .form-group i {
                margin-right: 10px;
                color: #007bff;
            }
    </style>
    <title>@ViewData["Title"]</title>
</head>
<body>
    <div class="signup-container">
        <h2>Signup</h2>
        <form asp-action="Signup" method="post">
            <div class="form-group">
                <label asp-for="CustomerName"><i class="fas fa-user"></i>Name</label>
                <input asp-for="CustomerName" class="form-control" placeholder="Enter your name" />
                <span asp-validation-for="CustomerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustomerEmail"><i class="fas fa-envelope"></i>Email</label>
                <input asp-for="CustomerEmail" class="form-control" placeholder="Enter your email" />
                <span asp-validation-for="CustomerEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustomerPhone"><i class="fas fa-phone"></i>Phone</label>
                <input asp-for="CustomerPhone" class="form-control" placeholder="Enter your phone number" />
                <span asp-validation-for="CustomerPhone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"><i class="fas fa-lock"></i>Password</label>
                <input asp-for="Password" class="form-control" type="password" placeholder="Enter your password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Signup</button>
        </form>
    </div>
</body>
</html>
