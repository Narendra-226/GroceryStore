@model NK.Models.ItemViewModel

@{
    ViewData["Title"] = "Create Item";
    Layout = null; // Disable layout for this view
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <style>
        body {
            background: #f2f6fc;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            font-family: 'Arial', sans-serif;
        }

        .item-container {
            background: #ffffff;
            padding: 40px;
            border-radius: 15px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            max-width: 500px;
            width: 100%;
        }

        .item-container h2 {
            margin-bottom: 30px;
            color: #333;
            text-align: center;
        }

        .item-container .form-group {
            margin-bottom: 20px;
        }

        .item-container .form-control {
            height: 50px;
            border-radius: 10px;
            border: 1px solid #ced4da;
        }

        .item-container .btn {
            width: 100%;
            height: 50px;
            border-radius: 10px;
            background: #007bff;
            border: none;
            color: white;
            font-size: 18px;
            font-weight: bold;
        }

        .item-container .btn:hover {
            background: #0056b3;
        }

        .item-container .form-group label {
            font-weight: bold;
            color: #555;
        }

        .item-container .form-group i {
            margin-right: 10px;
            color: #007bff;
        }
    </style>
    <title>@ViewData["Title"]</title>
</head>
<body>
    <div class="item-container">
        <h2>Create Item</h2>
        <form asp-action="Create" method="post">
            <div class="form-group">
                <label asp-for="ItemName"><i class="fas fa-box"></i>Item Name</label>
                <input asp-for="ItemName" class="form-control" placeholder="Enter item name" />
                <span asp-validation-for="ItemName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ItemPrice"><i class="fas fa-dollar-sign"></i>Item Price</label>
                <input asp-for="ItemPrice" class="form-control" placeholder="Enter item price" />
                <span asp-validation-for="ItemPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ItemQuantity"><i class="fas fa-cube"></i>Item Quantity</label>
                <input asp-for="ItemQuantity" class="form-control" placeholder="Enter item quantity" />
                <span asp-validation-for="ItemQuantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ItemImageUrl"><i class="fas fa-image"></i>Item Image URL</label>
                <input asp-for="ItemImageUrl" class="form-control" placeholder="Enter image URL" />
                <span asp-validation-for="ItemImageUrl" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Create</button>
        </form>
    </div>
</body>
</html>
